{% extends 'base2.html.twig' %}

{% block body %}
	<script type="text/javascript" src="{{ asset('js/ckeditor/ckeditor.js') }}"></script>
	{% include 'convivencia/navegacion.html.twig' %}
	<div class="">
		{% if app.request.get('id') %}
			<h3 class="center azul-prof fuente">Editar noticia</h3>
		{% else %}
			<h3 class="center azul-prof fuente">Nueva noticia</h3>
		{% endif %}

		<div class="center">
			<a class="waves-effect waves-light btn modal-trigger blue darken-3" href="#modal1">Info Parametrización</a>
		</div>

		{{ form_start(form)}}
		<div class="input-field col s6 m4 offset-m2" id="tituloNoticia">
			{{form_row(form.titulo)}}
		</div>


		<div class="input-field col s6 m4" id="descripcionNoticia">
			{{form_row(form.descripcion)}}
		</div>

		<div class="input-field col s4 m4 offset-m2" id="tagParametrizacionCursos">
			{{form_row(form.tagParametrizacionCursos)}}
		</div>

		<div id="modal1" class="modal">
			<div class="modal-content">
				<h4>Parametrización de las noticias</h4>
				<p>Todos los cursos, grupos o puntos escriba *</p>
				<p>Solo un curso, grupo o punto escriba su nombre</p>
				<p>Varios cursos, grupos o puntosescriba el nombre de los cursos separados por comas</p>
			</div>
			<div class="modal-footer">
				<a href="#!" class="modal-close waves-effect waves-green btn-flat">Entendido</a>
			</div>
		</div>

		<div class="input-field col s6 m4 " id="tagParametrizacionValores">
			{{form_row(form.tagParametrizacionValores)}}
		</div>

		<div class="input-field col s6 m4 offset-m2" id="tagParametrizacionCategorias">
			{{form_row(form.tagParametrizacionCategorias)}}
		</div>

		<div class="input-field col s6 m4" id="tagParametrizacionPuntos">
			{{form_row(form.tagParametrizacionPuntos)}}
		</div>

		<div class="input-field col s6 m4 offset-m4" id="tagParametrizacionGrupos">
			{{form_row(form.tagParametrizacionGrupos)}}
		</div>

		<div class="col s12 m8 offset-m2">
			{{form_row(form.codigoEmbebido)}}
			<script>

				CKEDITOR.replace('appbundle_noticiasv2_codigoEmbebido');
			</script>
		</div>


		<div style="margin-top: 3%" class="col s12 center">
			<a href="{{ path('noticias') }}" data-title="Cancelar" data-content="¿Desea regresar a noticias?" class="z-depth-3 btn blue darken-3 waves-effect waves-light botonSubmit confirm" style="margin-bottom: 1%">Cancelar
				<i class="material-icons left">undo</i>
			</a>
			<button class="btn z-depth-3 blue darken-4 waves-effect waves-light" type="submit" style="margin-bottom: 1%" value="Enviar">Enviar
				<i class="material-icons right">send</i>
			</button>
		</div>
		{{ form_end(form) }}
	</div>
</div>{% endblock %}
